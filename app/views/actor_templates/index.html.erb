<h1>
  List of all actors
</h1>

<hr>

<form action="/insert_actor_record" method="post">
  <div>
    <label for="name_field"> Name </label>
    <input id="name_field" name="query_name" type="text">
  </div>

  <div>
    <label for="dob_field"> Dob </label>
    <input id="dob_field" name="query_dob" type="date">
  </div>

  <div>
    <label for="bio_field"> Bio </label>
    <textarea id="bio_field" name="query_bio" rows="3"></textarea>
  </div>

  <div>
    <label for="img_field"> Image </label>
    <input id="img_field" name="query_image" type="text">
  </div>

  <button> 
    Create actor
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>

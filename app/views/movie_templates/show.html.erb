<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<div>
  <a href="/movies">
    Go back
  </a>
</div>

<div>
  <a href="/delete_movie/<%= @the_movie.id%>"> 
    Delete Movie
  </a>
</div>
<hr>

<form action="/modify_movie_record/<%= @the_movie.id %>" method="post">
  <div>
    <label for="title_box"> Title </label>
    <input id="title_box" name="query_title" type="text" value="<%= @the_movie.title %>">
  </div>

  <div>
    <label for="year_box"> Year </label>
    <input id="year_box" name="query_year" type="text" value="<%= @the_movie.year %>">
  </div>

  <div>
    <label for="duration_box"> Duration </label>
    <input id="duartion_box" name="query_duration" type="text" value="<%= @the_movie.duration %>">
  </div>

  <div>
    <label for="description_box">Description </label>
    <textarea id="description_box" name="query_description" rows="3"><%= @the_movie.description %></textarea>
  </div>

  <div>
    <label for="img_box"> Image </label>
    <input id="img_box" name="query_img" type="text" value="<%= @the_movie.image %>">
  </div>

  <div>
    <label for="director_id_box"> Director ID </label>
    <input id="director_id_box" name="query_director_id" type="text" value="<%= @the_movie.director_id %>">
  </div>

  <button>
    Update movie
  </button>
</form>

<hr>
<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <% if the_director == nil %>
      Uh oh! We weren't able to find a director for this movie.
    <% else %>
      <%= the_director.name %>
    <% end %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
